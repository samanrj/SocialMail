<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_layout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vanient.mycontacts.MailReceiver.PostCommentActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/bt_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton2"
        android:textColor="#fff"
        android:layout_marginRight="36dp"
        android:layout_marginTop="28dp"
        android:text="Comment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bodyInput" />

    <EditText
        android:id="@+id/bodyInput"
        android:layout_width="326dp"
        android:layout_height="105dp"
        android:layout_marginBottom="340dp"
        android:layout_marginLeft="28dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:singleLine="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="200dp"
        android:textColor="#06f"
        android:textSize="18dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="28dp"
        android:text="Comment on this post"
        app:layout_constraintBottom_toTopOf="@+id/bodyInput"
        app:layout_constraintLeft_toLeftOf="parent" />



</android.support.constraint.ConstraintLayout>
